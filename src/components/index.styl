.main
  color $text-color
  background-color $background-color
  height 100vh
  h1
    margin 0
    padding-left 10px
    padding-top 30px
  p
    margin 0
    padding-left 10px
    padding-top 20px
  button
    font-size 25px
    outline none
    color $text-color
    border none
    border-radius 0.1em
    width 80px
    height 60px
    background-color lighten($background-color, 10%)
    margin 5px
    &:hover
      background-color lighten($background-color, 5%)
    &:active
      background-color lighten($background-color, 2%)

